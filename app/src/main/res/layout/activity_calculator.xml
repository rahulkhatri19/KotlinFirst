<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CalculatorActivity">

    <TextView
        android:id="@+id/tv_show_calculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:paddingRight="2dp"
        android:hint="0"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:text="CE"
                android:onClick="btnNumEvent"
                android:textSize="15sp"
                android:id="@+id/btn_ce"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="x2"
                android:onClick="btnNumEvent"
                android:id="@+id/btn_xSquare"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="btnNumEvent"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="%"
                android:id="@+id/btn_percent"/>

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onOptionEvent"
                android:padding="5dp"
                android:text="/"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:text="7"
                android:onClick="btnNumEvent"
                android:textSize="15sp"
                android:id="@+id/btn_7"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="8"
                android:onClick="btnNumEvent"
                android:id="@+id/btn_8"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="btnNumEvent"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:text="9"
                android:id="@+id/btn_9"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:text="X"
                android:onClick="onOptionEvent"
                android:textSize="15sp"
                android:id="@+id/btn_multiply"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:text="4"
                android:onClick="btnNumEvent"
                android:textSize="15sp"
                android:id="@+id/btn_4"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="btnNumEvent"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="5"
                android:id="@+id/btn_5"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="btnNumEvent"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:text="6"
                android:id="@+id/btn_6"/>

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onOptionEvent"
                android:padding="5dp"
                android:text="-"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:text="1"
                android:onClick="btnNumEvent"
                android:textSize="15sp"
                android:id="@+id/btn_1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:onClick="btnNumEvent"
                android:text="2"
                android:id="@+id/btn_2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="btnNumEvent"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:text="3"
                android:id="@+id/btn_3"/>

            <Button
                android:id="@+id/btn_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onOptionEvent"
                android:padding="5dp"
                android:text="+"
                android:textSize="18sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:text="+ / -"
                android:onClick="btnNumEvent"
                android:textSize="15sp"
                android:id="@+id/btn_sign"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:text="0"
                android:onClick="btnNumEvent"
                android:id="@+id/btn_0"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:text="."
                android:onClick="btnNumEvent"
                android:id="@+id/btn_dot"/>

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="equalEvent"
                android:padding="5dp"
                android:text="="
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>